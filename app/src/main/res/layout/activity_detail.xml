<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image_detail"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:contentDescription="@string/season_picture"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp">

            <!--Date-->
            <RelativeLayout
                android:id="@+id/rlDate"
                style="@style/detailActivityRL">

                <ImageView
                    android:id="@+id/ivCalendarIcon"
                    style="@style/detailActivityIcons"
                    android:contentDescription="@string/calendar"
                    app:srcCompat="@drawable/ic_calendar_purple_24dp"/>

                <TextView
                    android:id="@+id/tvDetailDate"
                    style="@style/Material.Primary.TextView"/>

                <TextView
                    android:id="@+id/tvDetailDateDescription"
                    style="@style/Material.Secondary.TextView"
                    android:layout_below="@+id/tvDetailDate"
                    android:text="@string/date"/>
            </RelativeLayout>

            <!--Age-->
            <RelativeLayout
                android:id="@+id/rlAge"
                style="@style/detailActivityRL"
                android:layout_below="@+id/rlDate">

                <TextView
                    android:id="@+id/tvDetailAge"
                    style="@style/Material.Primary.TextView"/>

                <TextView
                    android:id="@+id/tvDetailAgeDescription"
                    style="@style/Material.Secondary.TextView"
                    android:layout_below="@+id/tvDetailAge"
                    android:text="@string/age"/>
            </RelativeLayout>

            <!--Divider-->
            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlAge"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:background="@color/divider_color"/>

            <!--Phone number-->
            <RelativeLayout
                android:id="@+id/rlPhone"
                style="@style/detailActivityRL"
                android:layout_below="@+id/viewDivider">

                <ImageView
                    android:id="@+id/ivPhoneIcon"
                    style="@style/detailActivityIcons"
                    android:contentDescription="@string/phone"
                    app:srcCompat="@drawable/ic_call_purple_24dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/chat"
                    app:srcCompat="@drawable/ic_chat_purple_24dp"/>

                <TextView
                    android:id="@+id/tvDetailPhone"
                    style="@style/Material.Primary.TextView"/>

                <TextView
                    android:id="@+id/tvDetailPhoneDescription"
                    style="@style/Material.Secondary.TextView"
                    android:layout_below="@+id/tvDetailPhone"
                    android:text="@string/phone"/>
            </RelativeLayout>

            <!--Email-->
            <RelativeLayout
                android:id="@+id/rlEmail"
                style="@style/detailActivityRL"
                android:layout_below="@+id/rlPhone">

                <ImageView
                    android:id="@+id/ivEmailIcon"
                    style="@style/detailActivityIcons"
                    android:contentDescription="@string/email"
                    app:srcCompat="@drawable/ic_email_purple_24dp"/>

                <TextView
                    android:id="@+id/tvDetailEmail"
                    style="@style/Material.Primary.TextView"/>

                <TextView
                    android:id="@+id/tvDetailEmailDescription"
                    style="@style/Material.Secondary.TextView"
                    android:layout_below="@+id/tvDetailEmail"
                    android:text="@string/email"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_anchor="@id/appbar_detail"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_create_white_24dp"/>
</android.support.design.widget.CoordinatorLayout>