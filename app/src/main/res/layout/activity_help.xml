<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_help_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <!-- Header -->
        <TextView
            style="@style/Primary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:text="@string/help_header" />

        <TextView
            style="@style/Secondary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:text="@string/help_description" />

        <!-- Open Battery optimization settings -->
        <include
            android:id="@+id/button_help_whitelist"
            layout="@layout/button_help_activity" />

        <TextView
            style="@style/Primary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="@string/help_delay_text" />

        <!-- Open settings button -->
        <include
            android:id="@+id/button_help_settings"
            layout="@layout/button_help_activity" />

        <!-- Huawei -->
        <TextView
            style="@style/Primary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="@string/huawei_header" />

        <TextView
            style="@style/Secondary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/huawei_description" />

        <!-- Samsung -->
        <TextView
            style="@style/Primary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="@string/samsung_header" />

        <TextView
            style="@style/Secondary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/samsung_description" />

        <!-- Xiaomi -->
        <TextView
            style="@style/Primary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="@string/xiaomi_header" />

        <TextView
            style="@style/Secondary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xiaomi_description" />

        <TextView
            style="@style/Primary.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="@string/help_email_description" />

        <!-- Send email button -->
        <include
            android:id="@+id/button_help_email"
            layout="@layout/button_help_activity" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>