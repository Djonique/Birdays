<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/materialRL"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/textview_all_age"
        android:layout_width="@dimen/age_circle_size"
        android:layout_height="@dimen/age_circle_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/age_circle"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Age"
        android:textColor="@android:color/white"
        android:textSize="@dimen/age_circle_text_size" />

    <TextView
        android:id="@+id/textview_all_name"
        style="@style/Material.Primary.TextView"
        android:maxLines="2"
        android:text="Full name here" />

    <TextView
        android:id="@+id/textview_all_date"
        style="@style/Material.Secondary.TextView"
        android:layout_below="@+id/textview_all_label"
        android:text="Date here" />

    <TextView
        android:id="@+id/textview_all_label"
        style="@style/Material.Secondary.TextView"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/textview_all_name"
        android:text="label here"
        tools:layout_alignParentEnd="false"
        tools:layout_alignParentRight="false" />

</RelativeLayout>