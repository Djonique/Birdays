<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.DetailActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="Material.Primary.TextView" parent="Primary.TextView">
        <item name="android:layout_marginLeft">@dimen/default_left_margin</item>
        <item name="android:layout_marginStart">@dimen/default_left_margin</item>
    </style>

    <style name="Material.Secondary.TextView" parent="Secondary.TextView">
        <item name="android:layout_marginLeft">@dimen/default_left_margin</item>
        <item name="android:layout_marginStart">@dimen/default_left_margin</item>
    </style>

    <style name="detailActivityIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/detail_activity_icon_padding</item>
        <item name="android:paddingStart">@dimen/detail_activity_icon_padding</item>
        <item name="android:paddingTop">@dimen/detail_activity_icon_padding</item>
    </style>
</resources>